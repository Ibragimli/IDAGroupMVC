
@{
    ViewData["Title"] = "ContactUs";
}
@model ContactViewModel
<main>
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 contactImage">
                    <img src="~/Images/@Model.Setting.Where(x=>x.IsDelete==false).FirstOrDefault(x=>x.Key=="ContactImage").Value" alt="">
                </div>
                <div class="col-lg-8 contactInputs">
                    <h1>@Model.Setting.Where(x => x.IsDelete == false).FirstOrDefault(x => x.Key == "ContactTitle").Value </h1>
                    <form  asp-action="contactus" method="post">
                        <div class="row">
                            <div class="col-lg-6">
                                <input  asp-for="@Model.Contact.Fullname" type="text" class="form-control" placeholder="Fullname">
                                <span class="text-danger" asp-validation-for="@Model.Contact.Fullname"></span>
                            </div>
                            <div class="col-lg-6">
                                <input asp-for="@Model.Contact.Email" type="text" class="form-control" placeholder="Email">
                                <span class="text-danger" asp-validation-for="@Model.Contact.Email"></span>
                            </div>
                            <div class="col-lg-6">
                                <input asp-for="@Model.Contact.PhoneNumber" type="text" class="form-control" placeholder="Phone Number">
                                <span class="text-danger" asp-validation-for="@Model.Contact.PhoneNumber"></span>
                            </div>
                            <div class="col-lg-6">
                                <input asp-for="@Model.Contact.Subject" type="text" class="form-control" placeholder="Subject">
                                <span class="text-danger" asp-validation-for="@Model.Contact.Subject"></span>
                            </div>
                            <div class="col-lg-12">
                                <textarea style="margin-top:10px" asp-for="@Model.Contact.Text" placeholder="Message"></textarea>
                                <span class="text-danger" asp-validation-for="@Model.Contact.Text"></span>
                            </div>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="col-lg-12 contactBtn">
                                <button type="submit" class="btn btn-primary">Send</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</main>


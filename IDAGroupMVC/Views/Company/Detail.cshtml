
@{
    ViewData["Title"] = "Detail";
}
@model Company
<main>
    <section id="productInfo">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 infoLeft">
                    <div class="infoTitle">
                        <h1>Alfons Haar</h1>
                        <img src="~/uploads/companies/@Model.CompanyImages.FirstOrDefault(x=>x.PosterStatus==true).Image" alt="">
                    </div>
                    <div class="infoText">
                        <p>
                            @Model.Description
                        </p>
                    </div>
                    <div class="infoBtn">
                        <a href="@Model.Website" target="_blank" class="button-55">
                            Go Site
                            <i class="fa-solid fa-arrow-up-right-from-square"></i>
                        </a>
                    </div>
                </div>
                <div class="col-lg-6 infoRight">
                    <h1>Documents</h1>
                    <ul>
                        <li>
                            <a href="#">
                                Lorem ipsum dolor sit.
                                <i class="fa-solid fa-download"></i>
                            </a>
                        </li>
                        <li>

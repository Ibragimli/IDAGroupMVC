@model IDAGroupMVC.Models.Setting

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Footer Panel Edit</h4>
<hr />

<div>
    <a asp-action="Index">Back to List</a>
</div>

<div class="content-body" style="min-height: 740px;">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Edit</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit" method="post" enctype="multipart/form-data">
                            <div class="row">

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="col-lg-9 mb-3">
                                    <div class="form-group">
                                        <label asp-for="Value" class="control-label" style=" color: #886CC0; font-weight: 700; font-size: 20px; ">Value</label>
                                        <textarea style="height:100px; max-height:200px" maxlength="500" asp-for="Value" class="form-control"></textarea>

                                        <span asp-validation-for="Value" class="text-danger"></span>
                                    </div>
                                    <input type="hidden" asp-for="Id" value="@Model.Id" />
                                </div>


                                <hr />
                                <div class="col-lg-12 mb-3 mt-2 d-flex justify-content-end">
                                    <div class="form-group">
                                        <a asp-action="index" asp-controller="footerpanel" class="ms-4  me-2 btn  btn-warning">Back</a>
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>
                                </div>

                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/manage/vendor/jquery-nice-select/js/jquery.nice-select.min.js"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/32.0.0/classic/ckeditor.js"></script>
    <script src="~/manage/js/CompanyImage.js"></script>

    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });
    </script>

}